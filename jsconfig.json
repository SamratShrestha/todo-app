{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "src", /* This is where all your code is*/
    "typeRoots" : ["./node_modules/@types", "./src/@types"],
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
